<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Workouts</title>
  <link rel="stylesheet" href="/style.css">

  <style>
    .workout-list {
      list-style: none;
      padding: 0;
      max-width: 600px;
      margin: 30px auto;
    }

    .workout-item {
      background: #ffffff;
      padding: 12px 16px;
      margin-bottom: 12px;
      border-radius: 8px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0,0,0,0.08);
    }

    .edit-btn {
      color: #0077cc;
      margin-right: 10px;
      font-weight: bold;
      text-decoration: none;
    }

    .delete-btn {
      background-color: #e63946;
      color: white;
      padding: 6px 12px;
      border-radius: 5px;
      border: none;
      cursor: pointer;
      font-size: 13px;
    }

    .delete-btn:hover {
      background-color: #b82531;
    }
  </style>
</head>
<%- include('partials/header') %>

<body>

<header class="navbar">
  <a href="/" class="nav-link">Home</a>

  <% if (user) { %>
    <a href="/workouts/add" class="nav-link">Add Workout</a>
  <% } %>

  <% if (!user) { %>
    <a href="/auth/google" class="nav-link">Login</a>
  <% } else { %>
    <a href="/auth/logout" class="nav-link">Logout</a>
  <% } %>
</header>

<main>
  <h1 style="text-align:center;">All Workouts</h1>

  <ul class="workout-list">
    <% workouts.forEach(workout => { %>
      <li class="workout-item">

        <span>
          <strong><%= workout.name %></strong> —
          <%= workout.duration %> mins —
          <%= new Date(workout.date).toLocaleDateString() %>
        </span>

        <% if (user) { %>
        <div>
          <a href="/workouts/<%= workout._id %>/edit" class="edit-btn">Edit</a>

          <form action="/workouts/<%= workout._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button class="delete-btn">Delete</button>
          </form>
        </div>
        <% } %>

      </li>
    <% }) %>
  </ul>
</main>

</body>
</html>
